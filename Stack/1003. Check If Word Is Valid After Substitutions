class Solution {
public:
    bool isValid(string s) {
        //Base case
        if(s.size() == 0){
            return true;
        }
        int fnd = s.find("abc");

        if(fnd != string::npos){
            string left = s.substr(0,fnd);
            string right = s.substr(fnd+3,s.size());
            return isValid(left+right);
        }
        return false;
    }
};






class Solution {
public:
    bool isValid(string s) {
        stack<char> st;

        for(int i=0;i<s.size();i++){
            if(s[i] == 'a'){
                st.push(s[i]);
            }
            else if(s[i] == 'b'){
                if(!st.empty() && st.top() == 'a'){
                    st.push(s[i]);
                }
                else{
                    return false;
                }
            }
            else if(s[i] == 'c'){
                if(!st.empty() && st.top() == 'b'){
                    st.pop();
                    if(!st.empty() && st.top() == 'a'){
                        st.pop();
                    }
                    else{
                        return false;
                    }
                }
                else{
                    return false;
                }
            }
        }
        return st.empty();
    }
};
